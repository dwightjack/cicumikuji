{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [".vscode", "packages/web/public"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "all",
			"semicolons": "always",
			"quoteStyle": "single",
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
