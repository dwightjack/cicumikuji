{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "pnpm --filter=cicumikuji-functions run build"
    ],
    "source": "packages/functions"
  },
  "hosting": {
    "public": "packages/app/dist",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/api/fetch-posts",
        "function": "fetchPosts"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
